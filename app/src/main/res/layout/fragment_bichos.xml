<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/customBackgroundBichos"
    tools:context=".Fragments.BichosFragment">

    <ImageView
        android:id="@+id/buttonDog"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/cao"
        app:layout_constraintBottom_toTopOf="@+id/buttonLion"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/buttonLion"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/leao"
        app:layout_constraintBottom_toTopOf="@+id/buttonSheep"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonDog" />

    <ImageView
        android:id="@+id/buttonSheep"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ovelha"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonLion" />

    <ImageView
        android:id="@+id/buttonCow"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/vaca"
        app:layout_constraintBottom_toTopOf="@+id/imageView9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/buttonMonkey" />

    <ImageView
        android:id="@+id/buttonMonkey"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/macaco"
        app:layout_constraintBottom_toTopOf="@+id/buttonCow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toBottomOf="@+id/buttonCat" />

    <ImageView
        android:id="@+id/buttonCat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:src="@drawable/gato"
        app:layout_constraintBottom_toTopOf="@+id/buttonMonkey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline5"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/direitos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>